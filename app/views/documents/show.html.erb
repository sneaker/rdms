<p id="notice"><%= notice %></p>

<div class="page-header">
  <h2>Document details <%= @document.name %> </h2>
    <%= link_to 'Back', documents_path %> |
    <%= link_to 'Edit', edit_document_path(@document) %> |
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <ul class="list-group">
        <li class="list-group-item">
          <strong>Name:</strong>
          <%= @document.name %>
        </li>
        <li class="list-group-item">
          <strong>Description:</strong>
          <%= @document.description %>
        </li>
        <li class="list-group-item">
          <strong>Filename:</strong>
          <%= @document.file_file_name %>
        </li>
        <li class="list-group-item">
          <strong>Filetype:</strong>
          <%= @document.file_content_type%>
        </li>
        <li class="list-group-item">
          <strong>Size:</strong>
          <%= @document.file_file_size %> bytes
        </li>
        <li class="list-group-item">
          <strong>Created at:</strong>
          <%= @document.created_at %>
        </li>
        <li class="list-group-item">
          <strong>Owner:</strong>
          <%= @document.owner %>
        </li>
        <li class="list-group-item">
          <strong>Actions:</strong>
          <%= link_to "Download", @document.file.url(:original, false) %> |
          <%= link_to 'Fullscreen', :controller => :documents, :action => :fullview, :id => @document.id %>
        </li>
      </ul>
    </div>
    <div class="col-md-6">
      <p>
      <iframe src="/pdfjs/web/viewer.html?file=<%= @document.file.url %>" style="border: 1" width="100%" height="600" frameborder="0" scrolling="no"></iframe>
      </p>
    </div>
  </div>
</div>

